{
  "variables": {
    "packer_profile": "packer",
    "branch_name": "{{env `BRANCH_NAME`}}"
  },
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/update.sh"
    },
    {
      "type": "file",
      "source": "./meta/amazonlinux.json_meta.json",
      "destination": "/opt/meta-data/amazonlinux.json"
    },
    {
      "type": "shell",
      "environment_vars" : [
        "PACKER_SOURCE_AMI={{ .SourceAMIName }}",
        "PACKER_SOURCE_AMI_ID={{ .SourceAMI }}"
      ],
      "inline": [
        "echo \"PackerBuildName: ${PACKER_BUILD_NAME}\" >> /opt/meta-data/ami.meta",
        "echo \"SourceAMIName: ${PACKER_SOURCE_AMI}\" >> /opt/meta-data/ami.meta",
        "echo \"SourceAMIId: ${PACKER_SOURCE_AMI_ID}\" >> /opt/meta-data/ami.meta",
        "echo \"UpdateDateTime: `date`\" >> /opt/meta-data/ami.meta",
        "echo \"\n\" >> /opt/meta-data/ami.meta"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "./ansible/amazonlinux.yml",
      "extra_arguments": [ "-b" ]
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-2",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "description": "Amazon Linux AMI *",
          "root-device-type": "ebs"
        },
        "owners": ["amazon"],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ami_regions": ["eu-west-2"],
      "ssh_interface": "private_ip",
      "vpc_id": "vpc-02321f288159e5d0e",
      "subnet_id": "subnet-00982fba28419ac5f",
      "temporary_security_group_source_cidr": "10.0.0.0/8",
      "ssh_username": "ec2-user",
      "ami_groups": "all",
      "ami_name": "HMPPS Base Amazon Linux {{user `branch_name`}} {{timestamp}}",
      "ssh_file_transfer_method": "sftp"
    }
  ]
}
