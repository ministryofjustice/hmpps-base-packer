{
  "variables": {
    "packer_profile": "packer",
    "branch_name": "{{env `BRANCH_NAME`}}",
    "target_env": "{{env `TARGET_ENV`}}",
    "artifact_bucket": "{{env `ARTIFACT_BUCKET`}}"
  },
  "provisioners": [
    {
      "type": "shell",
      "inline": "sudo mkdir -p /opt/meta-data/; sudo chmod -R 777 /opt/meta-data"
    },
    {
      "type": "file",
      "source": "./meta/jenkins_slave_kali.json_meta.json",
      "destination": "/opt/meta-data/jenkins_slave_kali.json"
    },
    {
      "type": "shell",
      "inline": [
        "echo \"PackerBuildName: ${PACKER_BUILD_NAME}\" >> /opt/meta-data/ami.meta",
        "PACKER_SOURCE_AMI_ID=`curl -S http://169.254.169.254/latest/meta-data/ami-id`",
        "echo \"SourceAMIId: $PACKER_SOURCE_AMI_ID\" >> /opt/meta-data/ami.meta",
        "echo \"UpdateDateTime: `date`\" >> /opt/meta-data/ami.meta",
        "echo \"\n\" >> /opt/meta-data/ami.meta"
      ]
    },
    {
      "type": "file",
      "source": "files/configure_github.sh",
      "destination": "/home/ec2-user/configure_github"
    },
    {
      "type": "shell",
      "script": "scripts/jenkins_kali_slave.sh"
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-2",
      "source_ami": "ami-071d0c011e7ab12f5",
      "instance_type": "t2.micro",
      "ami_regions": ["eu-west-2"],
      "ami_users": [
          "895523100917",
          "077643444046",
          "723123699647"
      ],
      "ssh_interface": "private_ip",
      "vpc_id": "vpc-02321f288159e5d0e",
      "subnet_id": "subnet-00982fba28419ac5f",
      "ssh_username": "ec2-user",
      "temporary_security_group_source_cidr": "10.0.0.0/8",
      "ami_name": "HMPPS Jenkins Slave Kali {{user `branch_name`}} {{timestamp}}",
      "tags": {
        "OS_Version": "Kali Linux",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Base_AMI_ID": "{{ .SourceAMI }}",
        "Name": "HMPPS Jenkins Slave Kali {{user `branch_name`}} {{timestamp}}",
        "Git_Branch": "{{user `branch_name`}}"
      }
    }
  ]
}
