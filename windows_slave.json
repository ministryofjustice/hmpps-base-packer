{
  "variables": {
    "packer_profile": "packer",
    "branch_name": "{{env `BRANCH_NAME`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "communicator": "winrm",
      "winrm_username": "Administrator",
      "winrm_use_ssl": false,
      "winrm_insecure": true,
      "region": "eu-west-2",
      "user_data_file": "./scripts/userdata.txt",
      "source_ami_filter": {
        "filters": {
          "description": "Microsoft Windows Server 2012 R2 RTM 64-bit Locale English AMI provided by Amazon"
        },
        "owners": ["amazon"],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ami_regions": ["eu-west-2"],
      "ami_users": [
          "895523100917"
      ],
      "ami_name": "HMPPS Jenkins Slave Windows Server {{user `branch_name`}} {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/firefox.ini",
      "destination": "c:\\temp\\firefox.ini"

    },
    {
      "type": "powershell",
      "script": "scripts/update_powershell_version.ps1"
    },
    {
      "type": "powershell",
      "script": "scripts/configure_remoting_for_ansible.ps1"
    },
    {
      "type": "powershell",
      "script": "scripts/install_pre_requisites.ps1"
    }
  ]
}
