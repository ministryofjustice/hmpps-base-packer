{
  "variables": {
    "artifact_bucket": "{{env `ZAIZI_BUCKET`}}",
    "branch_name": "{{env `BRANCH_NAME`}}",
    "codebuild": "{{env `CODEBUILD`}}",
    "env_identifier": "{{env `TARGET_ENV`}}",
    "image_tag_version": "{{env `IMAGE_TAG_VERSION`}}",
    "packer_profile": "packer",
    "win_pass": "{{env `WIN_ADMIN_PASS`}}"
  },
  "sensitive-variables": [
    "admin_pass"
  ],
  "builders": [
    {
      "ami_name": "HMPPS Windows Server Base Ansible 2019 {{user `branch_name`}} {{timestamp}}",
      "ami_regions": [
        "eu-west-2"
      ],
      "type": "amazon-ebs",
      "communicator": "winrm",
      "winrm_username": "Administrator",
      "winrm_use_ssl": false,
      "winrm_insecure": true,
      "region": "eu-west-2",
      "vpc_id": "vpc-02321f288159e5d0e",
      "subnet_id": "subnet-00982fba28419ac5f",
      "iam_instance_profile": "tf-eu-west-2-hmpps-eng-{{user `env_identifier`}}-jenkins-ec2-agent-role-instance-profile",
      "temporary_security_group_source_cidrs": [ "10.0.0.0/8" ], 
      "user_data_file": "scripts/Windows/Base/ConfigureWinRM.txt",
      "source_ami_filter": {
        "filters": {
          "name": "Windows_Server-2019-English-Full-Base-*"
        },
        "most_recent": true,
        "owners": [
          "amazon"
        ]
      },
      "instance_type": "t3.large",
      "ami_users": [
        "563502482979",
        "723123699647",
        "895523100917",
        "077643444046",
        "431912413968",
        "645753425509",
        "479759138745",
        "349354156492",
        "130975965028",
        "716683748953",
        "010587221707",
        "050243167760",
        "205048117103",
        "728765553488",
        "330914586320",
        "130847504577",
        "434401102446",
        "766455809178"
      ],
      "tags": {
        "Base_AMI_ID": "{{ .SourceAMI }}",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Codebuild": "{{user `codebuild`}}",
        "Git_Branch": "{{user `branch_name`}}",
        "Name": "HMPPS Windows Server Base 2019 {{user `branch_name`}} {{timestamp}}",
        "OS_Version": "Windows Server 2019 DataCenter",
        "image_tag_version": "{{user `image_tag_version`}}",
        "source-code": "https://github.com/ministryofjustice/hmpps-base-packer"
      },
      "run_volume_tags": {
        "Base_AMI_ID": "{{ .SourceAMI }}",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Codebuild": "{{user `codebuild`}}",
        "Git_Branch": "{{user `branch_name`}}",
        "Name": "HMPPS Windows Server Base 2019 {{user `branch_name`}} {{timestamp}}",
        "OS_Version": "Windows Server 2019 DataCenter",
        "image_tag_version": "{{user `image_tag_version`}}",
        "source-code": "https://github.com/ministryofjustice/hmpps-base-packer"
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./ansible/windows_base.yml",
      "user": "Administrator",
      "ansible_env_vars": [ "WINRM_PASSWORD={{user `win_pass`}}" ],
      "extra_arguments": [
        "--connection", "packer",          
        "--extra-vars",
        "ansible_shell_type=powershell",
        "--extra-vars",
        "ansible_shell_executable=None"
      ]
    },
    {
      "script": "scripts/Windows/All/2019/UpdateLaunchConfig.ps1",
      "type": "powershell",
      "environment_vars": [ "WIN_ADMIN_PASS={{user `win_pass`}}" ]
    },
    {
      "type": "powershell",
      "inline": [
        "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SendEventLogs.ps1 -Schedule",
        "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SendWindowsIsReady.ps1 -Schedule",
        "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\InitializeInstance.ps1 -SchedulePerBoot",
        "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SysprepInstance.ps1 -NoShutdown"
      ]
    }
  ]
}