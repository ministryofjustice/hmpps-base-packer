{
  "variables": {
    "packer_profile": "packer",
    "branch_name": "{{env `BRANCH_NAME`}}"
  },
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/update.sh"
    },
    {
      "type": "file",
      "source": "./meta/centos7.json_meta.json",
      "destination": "/opt/meta-data/centos7.json"
    },
    {
      "type": "shell",
      "inline": "echo \"SourceAMI: {{ .SourceAMIName }}\nSourceAMIID: {{ .SourceAMI }}\" > /opt/meta-data/ami.meta"
    },
    {
      "type": "shell",
      "script": "scripts/centos7_awscli.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install_python3.sh"
    },
    {
      "type": "shell",
      "script": "scripts/ansible_galaxy_base.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "./ansible/centos7.yml",
      "extra_arguments": [
        "-b"
      ],
      "galaxy_file": "./ansible/requirements.yml",
      "inventory_groups": "centos7",
      "group_vars": "./ansible/group_vars"
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-2",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "description": "CentOS Linux 7 x86_64 HVM EBS*",
          "root-device-type": "ebs"
        },
        "owners": ["410186602215"],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ami_regions": ["eu-west-2"],
      "ssh_username": "centos",
      "ami_groups": "all",
      "ssh_interface": "private_ip",
      "vpc_id": "vpc-02321f288159e5d0e",
      "subnet_id": "subnet-00982fba28419ac5f",
      "temporary_security_group_source_cidr": "10.0.0.0/8",
      "ami_name": "HMPPS Base CentOS {{user `branch_name`}} {{timestamp}}"
    }
  ]
}
