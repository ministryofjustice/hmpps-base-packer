{
  "variables": {
    "packer_profile": "packer"
  },
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/update.sh"
    },
    {
      "type": "ansible",
      "playbook_file": "./ansible/centos7.yml",
      "extra_arguments": [ "-b" ]
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-2",
      "source_ami": "ami-4726cb20", 
      "instance_type": "t2.micro",
      "ami_regions": ["eu-west-2"],
      "ssh_username": "centos",
      "ami_name": "HMPPS Base CentOS {{timestamp}}"
    }
  ]
}
