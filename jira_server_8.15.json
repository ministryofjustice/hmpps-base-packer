{
  "variables": {
    "packer_profile": "packer",
    "branch_name": "{{env `BRANCH_NAME`}}",
    "image_tag_version": "{{env `IMAGE_TAG_VERSION`}}",
    "codebuild": "{{env `CODEBUILD`}}",
    "jira_version": "8.15.0"
  },
  "provisioners": [
    {
      "type": "shell",
      "inline": "sudo mkdir -p /opt/meta-data/; sudo chmod -R 777 /opt/meta-data"
    },
    {
      "type": "file",
      "source": "./meta/jira_server.json_meta.json",
      "destination": "/opt/meta-data/jira_server.json"
    },
    {
      "type": "shell",
      "inline": [
        "echo \"PackerBuildName: ${PACKER_BUILD_NAME}\" >> /opt/meta-data/ami.meta",
        "PACKER_SOURCE_AMI_ID=`curl -S http://169.254.169.254/latest/meta-data/ami-id`",
        "echo \"SourceAMIId: $PACKER_SOURCE_AMI_ID\" >> /opt/meta-data/ami.meta",
        "echo \"UpdateDateTime: `date`\" >> /opt/meta-data/ami.meta",
        "echo \"\n\" >> /opt/meta-data/ami.meta"
      ]
    },
    {
      "type": "shell",
      "script": "scripts/jira_server.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "./ansible/jira_server.yml",
      "extra_arguments": ["--become",
        "--extra-vars",
        "\"jira_version={{user `jira_version`}}\""
      ],
      "galaxy_file": "./ansible/jira_server_requirements.yml",
      "inventory_groups": "jira_server_8",
      "group_vars": "./ansible/group_vars"
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-2",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "name": "HMPPS Base Amazon Linux 2 LTS*",
          "root-device-type": "ebs"
        },
        "owners": ["895523100917"],
        "most_recent": true
      },
      "instance_type": "t2.medium",
      "ami_regions": ["eu-west-2"],
      "ami_users": [
          "895523100917",
          "077643444046",
          "723123699647"
      ],
      "ssh_interface": "private_ip",
      "vpc_id": "vpc-02321f288159e5d0e",
      "subnet_id": "subnet-00982fba28419ac5f",
      "ssh_username": "ec2-user",
      "temporary_security_group_source_cidr": "10.0.0.0/8",
      "iam_instance_profile": "tf-eu-west-2-hmpps-eng-dev-jenkins-ec2-agent-role-instance-profile", 
      "ami_name": "HMPPS JIRA Server {{user `jira_version`}} Amazon Linux 2 LTS {{user `branch_name`}} {{timestamp}}",
      "tags": {
        "OS_Version": "Amazon Linux 2",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Base_AMI_ID": "{{ .SourceAMI }}",
        "Name": "HMPPS JIRA Server {{user `jira_version`}} Amazon Linux 2 LTS {{user `branch_name`}} {{timestamp}}",
        "Git_Branch": "{{user `branch_name`}}",
        "image_tag_version": "{{user `image_tag_version`}}",
        "source-code": "https://github.com/ministryofjustice/hmpps-base-packer",
        "Codebuild": "{{user `codebuild`}}"
      },
      "run_volume_tags": {
        "OS_Version": "Amazon Linux 2",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Base_AMI_ID": "{{ .SourceAMI }}",
        "Name": "HMPPS JIRA Server {{user `jira_version`}} Amazon Linux 2 LTS {{user `branch_name`}} {{timestamp}}",
        "Git_Branch": "{{user `branch_name`}}",
        "image_tag_version": "{{user `image_tag_version`}}",
        "source-code": "https://github.com/ministryofjustice/hmpps-base-packer",
        "Codebuild": "{{user `codebuild`}}"
      }
    }
  ]
}
